<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet
    exclude-result-prefixes="#all"
    version="2.0"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:portal="http://www.enonic.com/cms/xslt/portal">

  <xsl:template name="css">
    <style type="text/css">

      #query-container {
        float: left;
        width: 50%;
        margin-right: 10px;
      }

      #guide {
        float: left;
        width: 35%;
      }

      #tasks-query-result
      {
        clear: both;  
      }

      .task-list-task {
        border-top: #dcdcdc solid thin;
        padding-top: 5px;
      }

      .tasks-list-task-title {
        font-family: tahoma, arial, verdana, sans-serif;
        margin-bottom: 0px;
      }

      h3.tasks-list-task-title a {
        text-decoration: none;
        font-size: 120%;
        word-wrap: break-word;
      }

      .task-list-attributes table td .attribute-status-none {

      }

      .task-list-attributes table td .attribute-status-inprogress {
        background-color: #ffffcc;
      }

      .task-list-attributes table td .attribute-status-done {
        background-color: #EBF4DD;
      }

      .task-list-attributes table td .attribute-status-accepted {
        background-color: #ccffcc;
      }

      .task-list-attributes table td {
        padding: 0px;
      }

      .task-list-attributes table td div {
        background-color: #F9F9FA;
        border-left: 1px solid #FFFFFF;
        border-right: 1px solid #D4D5D6;
        color: #454545;
        cursor: pointer;
        height: 17px;
        overflow: hidden;
        padding: 2px 3px 4px;
        position: relative;
        text-align: center;
        white-space: nowrap;
      }

    </style>
  </xsl:template>


</xsl:stylesheet>
